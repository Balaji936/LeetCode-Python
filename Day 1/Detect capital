class Solution:
    def detectCapitalUse(self, word: str) -> bool:
             
       first  = word[0] <= z:
       second = word[1] <= z:        # first letter captial illa second iruthuchina
       if not first and second:
            return false
           
      if word[0].isupper() and word[1].isupper():
            for x in range(2, n):
                if not word[x].isupper():      # yellam captials
                    return False
      else:
            for i in range(1, n):
                if word[i].isupper():       # first letter yenavena irukatum ana after first uppper iruthuchina false retrun pananum
                    return False
      else:
       return true
                    
           
    
